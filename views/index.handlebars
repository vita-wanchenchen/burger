<h1>Eat-Da-Burger!</h1>

<h2>Burgers Created!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <li>
			{{this.id}}
			{{this.burger_name}}
    
    
			<button value="{{this.id}}" class="btn-primary devour">Devour It!</button>
    </li>
		  
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Already Ate!</h2>

  {{#each burgers}}
		{{#if this.devoured}}
			<li>
			  {{this.id}}
			  {{this.burger_name}}

			</li>
		{{/if}}
	{{/each}}

<h2>Add a Burger</h2>
<form action="/api/burgers" method="POST" class="create-form">

    <div class="form-group">
        <label for="new-burger">Burger Name:</label>
        <input type="text" id="new-burger" name="burger_name">
    </div>

    <button type="submit" id="submit">Make this Burger</button>
</form>